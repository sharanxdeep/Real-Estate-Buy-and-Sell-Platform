generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userid     Int        @id @default(autoincrement())
  email      String     @unique
  password   String
  firstName  String
  lastName   String
  createdAt  DateTime   @default(now())

  // Relations
  properties Property[]
}

model Property {
  propertyId   Int               @id @default(autoincrement())
  title        String
  description  String
  price        Float
  status       String
  category     String
  listedAt     DateTime          @default(now())

  // Foreign key
  ownerId      Int
  owner        User              @relation(fields: [ownerId], references: [userid], onDelete: Cascade)

  // Relations
  address      PropertyAddress?
  images       PropertyImage[]
}

model PropertyAddress {
  id         Int      @id @default(autoincrement())
  locality   String
  city       String
  state      String
  zipcode    String

  // Foreign key
  propertyId Int      @unique
  property   Property @relation(fields: [propertyId], references: [propertyId], onDelete: Cascade)
}

model PropertyImage {
  imageId     Int      @id @default(autoincrement())
  imageUrl    String
  imageName   String
  imageTime   DateTime @default(now())

  // Foreign key
  propertyId  Int
  property    Property @relation(fields: [propertyId], references: [propertyId], onDelete: Cascade)
}
